<header id="header">
  <div id="banner"></div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
      <h1 id="logo-wrap">
        <a href="<%- url_for() %>" id="logo"><%= config.title %></a>
      </h1>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle-wrap">
          <a href="<%- url_for() %>" id="subtitle"><%= theme.subtitle %></a>
        </h2>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% for (var i in theme.menu){ %>
          <a class="main-nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        <% } %>
      </nav>
      <nav id="sub-nav">
        <% if (theme.rss){ %>
          <a id="nav-rss-link" class="nav-icon" href="<%- theme.rss %>" title="RSS Feed"></a>
        <% } %>
        <a id="nav-search-btn" class="nav-icon" title="Search"></a>
      </nav>
      <div id="search-form-wrap">
        <% if (theme.search == 'baidu'){ %>
        <form action="http://www.baidu.com/baidu" method="get" accept-charset="utf-8" class="search-form">
          <input type="search" name="word" maxlength="20" class="search-form-input" placeholder="Search">
          <input type="submit" value="" class="search-form-submit">
          <input name=tn type=hidden value="bds">
          <input name=cl type=hidden value="3">
          <input name=ct type=hidden value="2097152">
          <input type="hidden" name="si" value="<%- config.url.replace(/^https?:\/\//, '') %>">
        </form>
        <% } %>
		
		<% if (theme.search == 'google'){ %>
        <form action="https://www.google.com.hk/search" method="get" accept-charset="utf-8" class="search-form">
          <input type="search" name="as_q" maxlength="20" class="search-form-input" placeholder="Search">
          <input type="submit" value="" class="search-form-submit">
		  <input type="hidden" name="as_sitesearch" value="<%- config.url.replace(/^https?:\/\//, '') %>">
		  <!--<input type="hidden" name="gws_rd" value="ssl">
		  <input type="hidden" name="safe" value="active">-->
        </form>
        <% } %>
		
		<% if (theme.search == 'bing'){ %>
        <form action="http://www.bing.com/search" method="get" accept-charset="utf-8" class="search-form">
          <input type="search" name="as_q" maxlength="20" class="search-form-input" placeholder="Search">
          <input type="submit" value="" class="search-form-submit" onclick="this.form.q.value = this.form.as_q.value + ' site:' + this.form.as_sitesearch.value">
		  <input type="hidden" name="as_sitesearch" value="<%- config.url.replace(/^https?:\/\//, '') %>">
		  <input type="hidden" name="q" value="">
        </form>
        <% } %>
      </div>
    </div>
  </div>
</header>